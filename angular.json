{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "demos",
    "projects": {
        "oarng": {
            "projectType": "library",
            "root": "libs/oarng",
            "sourceRoot": "libs/oarng/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "project": "libs/oarng/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "libs/oarng/tsconfig.lib.prod.json"
                        },
                        "development": {
                            "tsConfig": "libs/oarng/tsconfig.lib.json"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "libs/oarng/src/test.ts",
                        "tsConfig": "libs/oarng/tsconfig.spec.json",
                        "karmaConfig": "libs/oarng/karma.conf.js"
                    }
                }
            }
        },
        "wizard-demo": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:application": {
                    "strict": true
                }
            },
            "root": "demos/wizard",
            "sourceRoot": "demos/wizard/src",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "outputPath": "dist/wizard",
                        "index": "demos/wizard/src/index.html",
                        "main": "demos/wizard/src/main.ts",
                        "polyfills": "demos/wizard/src/polyfills.ts",
                        "tsConfig": "demos/wizard/tsconfig.app.json",
                        "assets": [
                            "demos/wizard/src/favicon.ico",
                            "demos/wizard/src/assets"
                        ],
                        "styles": [
                            "demos/wizard/src/styles.css",
                            "node_modules/primeng/resources/primeng.css",
                            "node_modules/primeicons/primeicons.css",
                            "node_modules/primeflex/primeflex.css",
                            "node_modules/primeng/resources/themes/saga-blue/theme.css",
                            "angular-archwizard/archwizard.css",
                            "angular-archwizard/archwizard.scss",
                            "libs/oarng/src/styles/font-awesome/css/font-awesome.min.css",
                            "libs/oarng/src/styles/main.css"
                        ],
                        "scripts": []
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "500kb",
                                    "maximumError": "1mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "2kb",
                                    "maximumError": "4kb"
                                }
                            ],
                            "fileReplacements": [
                                {
                                    "replace": "demos/wizard/src/environments/environment.ts",
                                    "with": "demos/wizard/src/environments/environment.prod.ts"
                                }
                            ],
                            "outputHashing": "all"
                        },
                        "development": {
                            "buildOptimizer": false,
                            "optimization": false,
                            "vendorChunk": true,
                            "extractLicenses": false,
                            "sourceMap": true,
                            "namedChunks": true
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "configurations": {
                        "production": {
                            "browserTarget": "wizard-demo:build:production"
                        },
                        "development": {
                            "browserTarget": "wizard-demo:build:development"
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "browserTarget": "wizard:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "demos/wizard/src/test.ts",
                        "polyfills": "demos/wizard/src/polyfills.ts",
                        "tsConfig": "demos/wizard/tsconfig.spec.json",
                        "karmaConfig": "demos/wizard/karma.conf.js",
                        "assets": [
                            "demos/wizard/src/favicon.ico",
                            "demos/wizard/src/assets"
                        ],
                        "styles": [
                            "demos/wizard/src/styles.css"
                        ],
                        "scripts": []
                    }
                }
            }
        }
    },
    "defaultProject": "oarng"
}
